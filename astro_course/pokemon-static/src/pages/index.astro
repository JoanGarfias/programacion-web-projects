---
import type { PokemonListResponse } from '../interfaces/PokemonListResponse';
import MainLayout from '../layouts/MainLayout.astro';

const resp = await fetch('https://pokeapi.co/api/v2/pokemon');
const pokemons = await resp.json() as PokemonListResponse;
console.log(pokemons);
---

<MainLayout title="Casa">
	<h2 class="text-2xl">Welcome to the Pok√©mon Static Site</h2>
	<p>This is a simple static site built with Astro.</p>

	<h1>Listado de pokemones</h1>
	<hr />
	<section
		aria-label="Listado de pokemones"
		class="grid grid-cols-1 sm:grid-cols-3 lg:grid-cols-4 gap-4">

		{
			pokemons.results.map((pokemon) => {
				return <li>{pokemon.name}</li>
			})
		}
		
	</section>
</MainLayout>